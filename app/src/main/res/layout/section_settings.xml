<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/cardview_default_elevation"
    android:layout_marginRight="@dimen/cardview_default_elevation"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/textViewSettingsMain"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:padding="1dp"
        android:textSize="@dimen/activity_vertical_margin"
        android:text="@string/element_text" />
    <TextView
        android:id="@+id/textViewSettingsSub"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingTop="35dp"
        android:textSize="10dp"
        android:text="@string/element_text" />

    <EditText
        android:id="@+id/editText_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="55dp"
        android:maxLines="1"
        android:singleLine="true" />
</FrameLayout>

